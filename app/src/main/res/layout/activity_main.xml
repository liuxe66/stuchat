<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.MainActivity"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/color_text_main"
                android:background="@color/color_top_bar"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#e5e5e5"/>
            <FrameLayout
                android:id="@+id/fl_msg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_msg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/ll_bottom"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@color/color_bottom_bar">
                <TextView
                    android:id="@+id/tv_switch"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textColor="@color/color_text_main"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="@drawable/shape_left_text_bg"/>
                <TextView
                    android:id="@+id/tv_next"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/color_text_main"
                    android:textSize="16sp"
                    android:text="下一个"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginStart="24dp"
                    android:background="@drawable/shape_left_text_bg"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_box"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:background="@color/color_bottom_bar"/>
        </LinearLayout>
        <com.opensource.svgaplayer.SVGAImageView
            android:id="@+id/svg_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:clearsAfterDetached="true"
            app:fillMode="Clear"
            android:background="#0000"/>
    </FrameLayout>

</layout>